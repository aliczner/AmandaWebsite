---
import { Icon } from 'free-astro-components'

interface Props {
  type: 'primary' | 'secondary' | 'light'
  icon?: string
  title?: string
  iconClasses?: string
  href?: string // New: Hyperlink
}

const { icon, title, href } = Astro.props

const cardClasses = [
  'flex flex-col items-center justify-center text-center gap-6 h-full min-h-[200px]',
  'bg-gradient-to-br from-primary/10 via-white to-secondary/10 rounded-3xl p-6 lg:p-8',
  'shadow-md hover:shadow-2xl',
  'transition-all duration-300 ease-out',
  'hover:scale-105 hover:-translate-y-2',
  'border border-primary/10',
]
  .filter(Boolean)
  .join(' ')

const iconClasses = ['w-20 h-20 text-primary  stroke-primary stroke-2']
  .filter(Boolean)
  .join(' ')
---

<a href={href} class="block no-underline">
  <article class={cardClasses}>
    <div
      class="icon"
      set:html={icon?.replace('<svg ', `<svg class="${iconClasses}" `)}
    />
    <h3 class="text-neutral-700 text-xl lg:text-2xl font-medium">{title}</h3>
  </article>
</a>
