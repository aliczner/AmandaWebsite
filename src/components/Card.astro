---
import { Icon } from 'free-astro-components'

interface Props {
  type: 'primary' | 'secondary' | 'light'
  icon?: string
  title?: string
  href?: string // New: Hyperlink
}

const { icon, title, href } = Astro.props

const cardClasses = [
  'flex flex-col items-center justify-center text-center gap-6 h-full',
  'bg-gradient-to-r from-primary/10 to-secondary/10 rounded-3xl p-8',
  'transition-transform duration-300 ease-in-out hover:scale-110', // New: Hover effect
]
  .filter(Boolean)
  .join(' ')

const iconClasses = ['w-20 h-20 text-primary'].filter(Boolean).join(' ')
---

<a href={href} class="block no-underline">
  <article class={cardClasses}>
    <Icon icon={icon} class={iconClasses} />
    <h3 class="text-neutral-700 text-2xl lg:text-3xl font-medium">{title}</h3>
  </article>
</a>
