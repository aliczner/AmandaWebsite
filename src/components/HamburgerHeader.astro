---
import {
Astronav,
MenuItems,
MenuIcon,
Dropdown,
DropdownItems,
} from "astro-navbar";
import Header from "./Header.astro"
---
<style>
    


/* Change the color of links on hover */
.topnav a:hover, button:hover {
  color: #b0b6a4;

}


/* Add a color to the active/current link */
.topnav a.active {
  background-color: #BCB382;
  color: white;
}
        .hyperlinks {
            color: #ECD498;
        }
</style>

<header class="p-2 text-white">
   <div class="flex justify-between items-center container mx-auto">
    <Header />
   <Astronav closeOnClick>
      <div class="flex w-full lg:w-auto justify-end items-center">
              <div class="block lg:hidden">
            <MenuIcon class="w-6 h-6 color: '#f7f3ed' m-2" />
         </div>
      </div>
      <MenuItems class="hidden lg:flex pt-2.5 ">
         <ul class="flex flex-col lg:flex-row lg:gap-5">
            <li>
               <a href="/contents">Contents</a>
            </li>
            <li>
               <Dropdown class="group">
                  <button class="flex items-center">
                     <span> About</span>
                     <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="3"
                        stroke="currentColor"
                        class="w-3 h-3 mt-0.5 ml-2 group-open:rotate-180">
                        <path
                           stroke-linecap="round"
                           stroke-linejoin="round"
                           d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                     </svg>
                  </button>
                  <DropdownItems class="relative">
                     <div
                        class="lg:absolute top-2 w-40  border shadow rounded p-2">
                        <ul>
                           <li>
                              <a href="/aboutme">About me</a>
                           </li>
                           <li>
                              <a href="/education">Education</a>
                           </li>
                           <li>
                            <a href="/skills">Skills</a>
                        </li>
                           </ul>
                  </DropdownItems>
               </Dropdown>
            </li>
            <li>
               <Dropdown class="group">
                  <button class="flex items-center">
                     <span> Research</span>
                     <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="3"
                        stroke="currentColor"
                        class="w-3 h-3 mt-0.5 ml-2 group-open:rotate-180">
                        <path
                           stroke-linecap="round"
                           stroke-linejoin="round"
                           d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                     </svg>
                  </button>
                  <DropdownItems class="relative">
                     <div
                        class="lg:absolute top-2 w-40 border shadow rounded p-2">
                        <ul>
                           <li>
                              <a href="/experience">Experience</a>
                           </li>
                           <li>
                              <a href="/current-work">Current Work</a>
                           </li>
                        </ul>
                     </div>
                  </DropdownItems>
               </Dropdown>
            <li>
               <a href="/collaborate">Collaborate</a>
            </li>
            <li>
               <a href="/contact">Contact</a>
            </li>
            </li>
         </ul>
      </MenuItems>
   </Astronav>
</header>