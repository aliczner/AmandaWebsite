---
interface Props {
  title?: string
  description?: string
  align?: 'center' | 'left' | 'right'
}

const { title, description, align } = Astro.props
---

<section class="pb-16 lg:pb-24">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="max-w-4xl mx-auto relative">
      <!-- Gradient background with shadow -->
      <div class="absolute inset-0 bg-gradient-to-br from-primary/20 via-secondary/15 to-primary/10 rounded-3xl blur-sm"></div>

      <div class="relative border border-primary/20 rounded-3xl overflow-hidden shadow-xl">
        <div
          class:list={[
            'flex flex-col gap-8 lg:gap-12',
            'bg-gradient-to-br from-white via-neutral-50 to-primary/5',
            'px-6 sm:px-8 lg:px-12 xl:px-16 py-12 lg:py-20',
            align === 'center' ? 'text-center items-center' : '',
          ]}
        >
          <div class="flex flex-col gap-4">
            {
              title && (
                <h2
                  class:list={[
                    'text-neutral-700 text-3xl sm:text-4xl lg:text-5xl [&>strong]:font-medium',
                    align === 'center' ? 'mx-auto' : '',
                  ]}
                  set:html={title}
                />
              )
            }
            {
              description && (
                <p
                  class:list={[
                    'text-neutral-600 text-base sm:text-lg lg:text-xl max-w-2xl',
                    align === 'center' ? 'mx-auto' : '',
                  ]}
                  set:html={description}
                />
              )
            }
          </div>

          <div>
            <slot />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
