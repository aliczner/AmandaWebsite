---
import HeroGradient from '../components/HeroGradient.astro'

interface Props {
  title?: string
  description?: string
  align?: 'center' | 'left'
}

const { title, description, align = 'left' } = Astro.props
---

<section class="relative h-svh text-neutral-700 overflow-clip">
  <div class="relative flex items-center w-full h-full overflow-clip">
    <HeroGradient />

    <div
      class:list={[
        'relative container flex flex-col gap-16',
        align === 'center' ? 'text-center' : '',
      ]}
    >
      <div class="flex flex-col gap-8">
        {
          title && (
            <h1
              class:list={[
                'text-white text-[12vw] sm:text-[11.5vw] md:text-[11vw] lg:text-[10vw] xl:text-[9vw] leading-none [&>strong]:font-medium ',
                'font-greatVibes',
                align === 'center' ? 'mx-auto' : '',
              ]}
              set:html={title}
            />
          )
        }
        {
          description && (
            <p
              class:list={[
                'text-white  lg:text-4xl text-xl tracking-wide',
                align === 'center' ? 'mx-auto' : '',
              ]}
              set:html={description}
            />
          )
        }
      </div>

      <div class="flex flex-col gap-4">
        <slot />
      </div>
    </div>
  </div>
</section>
