---
import Button from '../components/Button.astro'
import Code from '../components/Code.astro'
import CTA from '../sections/CTA.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import Hero from '../sections/Hero.astro'
import Intro from '../sections/Intro.astro'
import Layout from '../layouts/Layout.astro'
import Sidebar from '../layouts/Sidebar.astro'
---

<Layout title="Free Astro Components">
  <Sidebar class="lg:hidden" />
  <Header />
  <main>
    <Hero
      align="center"
      title=" <strong>Dr. Amanda Liczner</strong>"
      description="Ecologist • Bumble Bees • Conservation"
    >
      <div>
        <Button
          href="/guide/installation"
          text="About me"
          variant="primary"
          className="lg:text-2xl text-lg  tracking-wide"
        />
      </div>
    </Hero>
    <Intro />
    <CTA
      align="center"
      title="Ready to <strong>Get Started?</strong>"
      description="Explore my collection of free Astro components and start building your next project today."
    >
      <Button
        href="/components/button"
        text="Explore Components"
        className="text-xl tracking-wide"
        variant="primary"
      />
    </CTA>
  </main>
  <Footer />
</Layout>
