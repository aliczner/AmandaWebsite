---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---

<!DOCTYPE html>
<html lang="en">
  <body>
    <head>
      <style>

 /* html, body {
  height: 100%;
  width: 100%;
} */

.hero-image {
/* Use "linear-gradient" to add a darken background effect to the image (photographer.jpg). This will make the text easier to read */
background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("pictures/homepagepiccrop.jpg");

/* Set a specific height */
height: 100vh;
width: 100vw;
overflow-y: hidden; 

/* Position and center the image to scale nicely on all screens */
background-position: center;
background-repeat: no-repeat;
background-size: cover;
position: relative;
}

/* Place text in the middle of the image */
.hero-text {
text-align: center;
position: absolute;
top: 33%;
left: 50%;
transform: translate(-50%, -50%);
color: white;
}
.title{
  font-size: 6vw;
  font-family: "Century Gothic";
  overflow: hidden;
  white-space: nowrap;
}

.subtitle{
  font-size: 3vw;
  font-family: Calibri;
  position: relative;
  overflow: hidden;
  white-space: nowrap;
}

.homepage-button{
  box-sizing: border-box;
  border: 2px solid #FFFFFF;
  padding: 2%;
  border-radius: 12px;
  font-size: 2vw;
  font-family: Calibri;
  transition-duration: 0.4s;
  position: absolute;
  top: 130%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.homepage-button:hover {
  background-color: #373D20;
  color: grey;
}

      </style>

    </head>
    
  <div class="hero-image">
    <div class="hero-text">
      <h1 class="title">Dr. Amanda Liczner</h1>
      <p class= "subtitle">Ecologist - Bumble Bees - Conservation</p>
      <button class="homepage-button" onclick="location.href='/contents'">Welcome to my website! </button>
    </div>
    <div>	
      <Header/></div>
  </div>


  </body>
</html>