---
import Button from '../components/Button.astro'
import CTA from '../sections/CTA.astro'
import Header from '../components/Header.astro'
import Hero from '../sections/Hero.astro'
import Intro from '../sections/Intro.astro'
import Layout from '../layouts/Layout.astro'
import Sidebar from '../layouts/Sidebar.astro'
import AboutMe from '../sections/AboutMe.astro'
import { SEO } from 'astro-seo'
import '../styles/main.scss'

const siteUrl = Astro.site?.toString() || 'https://amandaliczner.ca'
---

<SEO
  title="Dr. Amanda Liczner - Freelance Ecological Consultant | Bee Conservation & Data Analysis"
  description="Dr. Amanda Liczner is a freelance ecological consultant available for conservation projects across Canada. Specializing in bee conservation, statistical analysis, GIS mapping, and ecological research. Available for consulting engagements."
  canonical={`${siteUrl}/`}
  openGraph={{
    basic: {
      title:
        'Dr. Amanda Liczner - Freelance Ecological Consultant | Bee Conservation & Data Analysis',
      type: 'website',
      image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      url: siteUrl,
    },
    optional: {
      description:
        'Dr. Amanda Liczner is a freelance ecological consultant specializing in bee conservation, statistical analysis, and GIS mapping. Available for projects across Canada.',
      siteName: 'Dr. Amanda Liczner - Freelance Ecological Consultant',
      locale: 'en_CA',
    },
    image: {
      url: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      secureUrl: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      alt: 'Dr. Amanda Liczner, freelance ecological consultant',
      type: 'image/jpeg',
      width: 600,
      height: 600,
    },
  }}
  twitter={{
    card: 'summary_large_image',
    site: '@amandaliczner',
    creator: '@amandaliczner',
    title: 'Dr. Amanda Liczner - Freelance Ecological Consultant',
    description:
      'Freelance ecological consultant specializing in bee conservation, data analysis, and GIS. Available for projects across Canada.',
    image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
    imageAlt: 'Dr. Amanda Liczner',
  }}
  extend={{
    meta: [
      {
        name: 'keywords',
        content:
          'Amanda Liczner, freelance ecologist, ecological consultant Canada, bee conservation consultant, freelance ecological consultant, GIS ecological services, statistical analysis ecology, pollinator conservation, hire ecologist Canada',
      },
      { name: 'author', content: 'Dr. Amanda Liczner' },
      { name: 'robots', content: 'index, follow, max-image-preview:large' },
      { name: 'geo.region', content: 'CA' },
    ],
    link: [
      { rel: 'alternate', hreflang: 'en-ca', href: siteUrl },
      { rel: 'alternate', hreflang: 'en', href: siteUrl },
    ],
  }}
/>

<!-- Person Schema (Primary) -->
<script
  type="application/ld+json"
  set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Person',
    name: 'Dr. Amanda Liczner',
    givenName: 'Amanda',
    familyName: 'Liczner',
    honorificPrefix: 'Dr.',
    jobTitle: 'Freelance Ecological Consultant',
    description:
      'Freelance ecological consultant specializing in bee conservation, statistical analysis, GIS mapping, and ecological research. Available for projects across Canada.',
    url: siteUrl,
    image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
    sameAs: [
      siteUrl,
      `${siteUrl}/experience`,
      `${siteUrl}/books`,
      `${siteUrl}/services`,
      'https://twitter.com/amandaliczner',
    ],
    alumniOf: [
      {
        '@type': 'Organization',
        name: 'York University',
        location: 'Toronto, Ontario, Canada',
      },
    ],
    knowsAbout: [
      'Bumble Bee Ecology',
      'Conservation Biology',
      'Radio Telemetry',
      'Pollinator Conservation',
      'Statistical Analysis',
      'GIS Mapping',
      'Habitat Selection',
      'Animal Movement',
      'Wildlife Tracking',
    ],
    hasOccupation: {
      '@type': 'Occupation',
      name: 'Freelance Ecological Consultant',
      occupationalCategory: 'Conservation Biology and Ecology',
    },
    makesOffer: {
      '@type': 'Offer',
      itemOffered: {
        '@type': 'Service',
        name: 'Ecological Consulting Services',
        description:
          'Statistical analyses, GIS mapping, bee conservation, field surveys, literature reviews, and restoration planning',
        url: `${siteUrl}/services`,
      },
    },
  })}
/>

<!-- WebSite Schema -->
<script
  type="application/ld+json"
  set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: 'Dr. Amanda Liczner - Ecologist',
    url: siteUrl,
    description:
      'Personal website of Dr. Amanda Liczner, ecologist and conservation biologist specializing in bumble bee research.',
    author: {
      '@type': 'Person',
      name: 'Dr. Amanda Liczner',
    },
    inLanguage: 'en-CA',
  })}
/>

<Layout title="Homepage - Dr. Amanda Liczner">
  <Sidebar class="lg:hidden" />
  <Header />
  <main>
    <Hero
      align="center"
      title=" <strong>Dr. Amanda Liczner</strong>"
      description="Ecologist • Bumble Bees • Conservation"
    >
      <div class="flex flex-col sm:flex-row gap-4">
        <Button
          href="/#about-me"
          text="About me"
          variant="primary"
          className="lg:text-2xl text-lg tracking-wide"
        />
        <Button
          href="/services"
          text="View Services"
          variant="secondary"
          className="lg:text-2xl text-lg tracking-wide"
        />
      </div>
    </Hero>
    <Intro />
    <AboutMe />
    <CTA
      align="center"
      title="Ready to Work Together?"
      description="I'm available for freelance ecological consulting projects across Canada. Let's discuss how I can support your conservation or research initiatives."
    >
      <div class="flex flex-col sm:flex-row gap-4">
        <Button
          href="/services"
          text="View Services"
          className="text-xl tracking-wide"
          variant="primary"
        />
        <Button
          href="/contact"
          text="Get in Touch"
          className="text-xl tracking-wide"
          variant="secondary"
        />
      </div>
    </CTA>
  </main>
</Layout>
