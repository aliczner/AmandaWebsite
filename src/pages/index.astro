---
import Button from '../components/Button.astro'
import CTA from '../sections/CTA.astro'
import Header from '../components/Header.astro'
import Hero from '../sections/Hero.astro'
import Intro from '../sections/Intro.astro'
import Layout from '../layouts/Layout.astro'
import Sidebar from '../layouts/Sidebar.astro'
import AboutMe from '../sections/AboutMe.astro'
import { SEO } from 'astro-seo'
import '../styles/main.scss'

const siteUrl = Astro.site?.toString() || 'https://amandaliczner.ca'
---

<SEO
  title="Dr. Amanda Liczner - Ecologist & Bumble Bee Conservation Researcher"
  description="Dr. Amanda Liczner is an ecologist and conservation biologist researching bumble bee behaviour and movement using radio telemetry. Post-doctoral fellow at the University of Guelph specializing in pollinator conservation, pesticide effects, and habitat selection."
  canonical={`${siteUrl}/`}
  openGraph={{
    basic: {
      title: 'Dr. Amanda Liczner - Ecologist & Bumble Bee Conservation Researcher',
      type: 'website',
      image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      url: siteUrl,
    },
    optional: {
      description: 'Dr. Amanda Liczner is an ecologist and conservation biologist researching bumble bee behaviour using radio telemetry at the University of Guelph.',
      siteName: 'Dr. Amanda Liczner - Ecologist',
      locale: 'en_CA',
    },
    image: {
      url: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      secureUrl: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      alt: 'Dr. Amanda Liczner, bumble bee ecologist and conservation biologist',
      type: 'image/jpeg',
      width: 600,
      height: 600,
    }
  }}
  twitter={{
    card: 'summary_large_image',
    site: '@amandaliczner',
    creator: '@amandaliczner',
    title: 'Dr. Amanda Liczner - Bumble Bee Ecologist',
    description: 'Ecologist & conservation biologist researching bumble bee behaviour using radio telemetry.',
    image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
    imageAlt: 'Dr. Amanda Liczner',
  }}
  extend={{
    meta: [
      { name: 'keywords', content: 'Amanda Liczner, bumble bee ecologist, conservation biologist, radio telemetry, pollinator research, bumble bee tracking, University of Guelph, pollinator conservation, ecology' },
      { name: 'author', content: 'Dr. Amanda Liczner' },
      { name: 'robots', content: 'index, follow, max-image-preview:large' },
      { name: 'geo.region', content: 'CA' },
    ],
    link: [
      { rel: 'alternate', hreflang: 'en-ca', href: siteUrl },
      { rel: 'alternate', hreflang: 'en', href: siteUrl },
    ]
  }}
/>

<!-- Person Schema (Primary) -->
<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'Person',
  'name': 'Dr. Amanda Liczner',
  'givenName': 'Amanda',
  'familyName': 'Liczner',
  'honorificPrefix': 'Dr.',
  'jobTitle': 'Ecologist and Conservation Biologist',
  'description': 'Post-doctoral fellow at the University of Guelph specializing in bumble bee ecology, conservation biology, and radio telemetry research.',
  'url': siteUrl,
  'image': `${siteUrl}/pictures/AmandaLiczner.jpg`,
  'sameAs': [
    siteUrl,
    `${siteUrl}/experience`,
    `${siteUrl}/books`,
    'https://twitter.com/amandaliczner'
  ],
  'alumniOf': [
    {
      '@type': 'Organization',
      'name': 'York University',
      'location': 'Toronto, Ontario, Canada'
    }
  ],
  'affiliation': {
    '@type': 'Organization',
    'name': 'University of Guelph',
    'location': 'Guelph, Ontario, Canada'
  },
  'knowsAbout': [
    'Bumble Bee Ecology',
    'Conservation Biology',
    'Radio Telemetry',
    'Pollinator Conservation',
    'Pesticide Effects on Pollinators',
    'Habitat Selection',
    'Animal Movement',
    'Wildlife Tracking'
  ],
  'hasOccupation': {
    '@type': 'Occupation',
    'name': 'Ecologist',
    'occupationalCategory': 'Conservation Biology and Ecology'
  }
})} />

<!-- WebSite Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  'name': 'Dr. Amanda Liczner - Ecologist',
  'url': siteUrl,
  'description': 'Personal website of Dr. Amanda Liczner, ecologist and conservation biologist specializing in bumble bee research.',
  'author': {
    '@type': 'Person',
    'name': 'Dr. Amanda Liczner'
  },
  'inLanguage': 'en-CA'
})} />

<Layout title="Homepage - Dr. Amanda Liczner">
  <Sidebar class="lg:hidden" />
  <Header />
  <main>
    <Hero
      align="center"
      title=" <strong>Dr. Amanda Liczner</strong>"
      description="Ecologist • Bumble Bees • Conservation"
    >
      <div>
        <Button
          href="/#about-me"
          text="About me"
          variant="primary"
          className="lg:text-2xl text-lg  tracking-wide"
        />
      </div>
    </Hero>
    <Intro />
    <AboutMe />
    <CTA
      align="center"
      title="Learn more</strong>"
      description="Find out about my research and find the latest updates on my projects."
    >
      <Button
        href="/experience"
        text="Experience"
        className="text-xl tracking-wide"
        variant="primary"
      />
    </CTA>
  </main>
</Layout>
