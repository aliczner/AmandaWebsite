---
import Footer from '../components/Footer.astro';
import HeaderFull from '../components/HeaderFull.astro'; // this is the full nav bar with social
import ContactForm from '../components/ContactForm'
import '../../node_modules/bootstrap/dist/css/bootstrap.min.css'
---

<!DOCTYPE html>
<html lang="en">
  
	<head>
		<style> 
            body {
            background-image: url("pictures/rose-petals.png");
            color: #FFFFFF; 
        }
        .page-title {
            font-size: 4em;
            font-family: Century Gothic;
            color: #FFFFFF;
        }

        .hyperlinks {
            color: #ECD498;
        }
        .fullscreen-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: -1; /* set a negative z-index to put it behind the text */
}

.fullscreen-bg__video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(50%); /* apply brightness filter to darken the video */
 
}


.container {
  position: relative; /* make the container a positioning context */
  z-index: 1; /* set a higher z-index than the video to put it in front */
}

            </style>
            </head>
        
        <main>



            <div class="container">
                <div class="fullscreen-bg">
                    <div class="fullscreen-bg__overlay"></div>
                  <video loop muted autoplay  class="fullscreen-bg__video">
                    <source src="contactVid.mp4" type="video/mp4">
                  </video>
                </div>
                <div> <HeaderFull / > </div> 
                <h1 class="page-title content flex py-12 px-12"> Contact </h1>
             <div>
                    <ContactForm/>
                </div>
            </div>
        </div>
        </main>
		<Footer />

</html>

// npm start