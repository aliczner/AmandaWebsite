---
import Content from '../../layouts/Content.astro'
import Heading from '../../components/Heading.astro'
import Article from '../../components/Article.astro'
import Layout from '../../layouts/Layout.astro'
import Sidebar from '../../layouts/Sidebar.astro'
import Header from '../../components/Header.astro'
import ContactForm from '../../components/ContactForm.astro'
import { SEO } from 'astro-seo'
import '../../styles/main.scss'

const siteUrl = Astro.site?.toString() || 'https://amandaliczner.ca'
---

<SEO
  title="Contact Dr. Amanda Liczner - Bumble Bee Research & Collaboration"
  description="Get in touch with Dr. Amanda Liczner for speaking engagements, research collaboration, educational programs about pollinator conservation, or consulting on bumble bee ecology. Connect with an expert in bumble bee tracking and conservation biology."
  canonical={`${siteUrl}/contact`}
  openGraph={{
    basic: {
      title: 'Contact Dr. Amanda Liczner - Bumble Bee Research & Collaboration',
      type: 'website',
      image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      url: `${siteUrl}/contact`,
    },
    optional: {
      description: 'Contact Dr. Amanda Liczner for speaking engagements, research collaboration, educational programs, or consulting on bumble bee ecology and pollinator conservation.',
      siteName: 'Dr. Amanda Liczner - Ecologist',
      locale: 'en_CA',
    },
    image: {
      url: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      secureUrl: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      alt: 'Dr. Amanda Liczner, bumble bee ecologist and conservation biologist',
      type: 'image/jpeg',
      width: 600,
      height: 600,
    }
  }}
  twitter={{
    card: 'summary_large_image',
    site: '@amandaliczner',
    creator: '@amandaliczner',
    title: 'Contact Dr. Amanda Liczner - Bumble Bee Research',
    description: 'Connect for speaking engagements, research collaboration, or educational programs about pollinator conservation.',
    image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
    imageAlt: 'Dr. Amanda Liczner, bumble bee ecologist',
  }}
  extend={{
    meta: [
      { name: 'keywords', content: 'contact Amanda Liczner, bumble bee researcher contact, pollinator conservation collaboration, ecology speaking engagements, conservation biology consulting, radio telemetry expert' },
      { name: 'author', content: 'Dr. Amanda Liczner' },
      { name: 'robots', content: 'index, follow' },
      { property: 'article:author', content: 'Dr. Amanda Liczner' },
      { name: 'geo.region', content: 'CA' },
      { name: 'geo.placename', content: 'Canada' },
    ],
    link: [
      { rel: 'alternate', hreflang: 'en-ca', href: `${siteUrl}/contact` },
      { rel: 'alternate', hreflang: 'en', href: `${siteUrl}/contact` },
    ]
  }}
/>

<!-- ContactPage Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  'name': 'Contact Dr. Amanda Liczner',
  'description': 'Get in touch with Dr. Amanda Liczner for speaking engagements, research collaboration, educational programs, or consulting on bumble bee ecology and pollinator conservation.',
  'url': `${siteUrl}/contact`,
  'mainEntity': {
    '@type': 'Person',
    'name': 'Dr. Amanda Liczner',
    'jobTitle': 'Ecologist and Conservation Biologist',
    'url': siteUrl,
    'image': `${siteUrl}/pictures/AmandaLiczner.jpg`,
    'sameAs': [
      siteUrl,
      `${siteUrl}/experience`,
      `${siteUrl}/books`
    ]
  }
})} />

<!-- Breadcrumb Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  'itemListElement': [
    {
      '@type': 'ListItem',
      'position': 1,
      'name': 'Home',
      'item': siteUrl
    },
    {
      '@type': 'ListItem',
      'position': 2,
      'name': 'Contact',
      'item': `${siteUrl}/contact`
    }
  ]
})} />

<style>
  .fullscreen-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
  }

  .fullscreen-bg__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(50%);
  }

  .text-shadow-white-glow {
    text-shadow: 0 0 0.5px rgba(255, 255, 255, 0.8);
  }

  .contact-form-container {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 32rem;
    margin: 0 auto;
  }
</style>

<Layout title="Contact - Amanda Liczner">
  <Sidebar class="lg:hidden" />
  <Header />
  <Content>
    <Article>
      <div class="fullscreen-bg">
        <video loop muted autoplay class="fullscreen-bg__video">
          <source src="/contactVid.mp4" type="video/mp4" />
        </video>
      </div>

      <Heading
        slot="header"
        level={1}
        gradient
        class="inline-block mx-auto text-shadow-white-glow"
        text="Contact Dr. Amanda Liczner - Bumble Bee Research Collaboration"
      />

      <div class="contact-form-container">
        <ContactForm
          apiEndpoint="/api/contact"
          rateLimitMinutes={5}
          maxMessageLength={2000}
          successMessage="Thanks! Your message has been sent. I will get back to you shortly."
          errorMessage="Oops! Something went wrong. Please try again later."
        />
      </div>
    </Article>
  </Content>
</Layout>
