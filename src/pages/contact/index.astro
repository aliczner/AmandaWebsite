---
import Content from '../../layouts/Content.astro'
import Heading from '../../components/Heading.astro'
import Article from '../../components/Article.astro'
import Layout from '../../layouts/Layout.astro'
import Sidebar from '../../layouts/Sidebar.astro'
import Header from '../../components/Header.astro'
import ContactForm from '../../components/ContactForm.astro'
import { SEO } from 'astro-seo'
import '../../styles/main.scss'
---

<SEO
  title="Amanda Liczner - Contact"
  description="Contact me for more information about my research or to collaborate."
  openGraph={{
    basic: {
      title: 'Amanda Liczner - Contact',
      type: 'website',
      image: '/pictures/AmandaLiczner.jpg',
    },
  }}
/>

<style>
  .fullscreen-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
  }

  .fullscreen-bg__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(50%);
  }

  .text-shadow-white-glow {
    text-shadow: 0 0 0.5px rgba(255, 255, 255, 0.8);
  }

  .contact-form-container {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 32rem;
    margin: 0 auto;
  }
</style>

<Layout title="Contact - Amanda Liczner">
  <Sidebar class="lg:hidden" />
  <Header />
  <Content>
    <Article>
      <div class="fullscreen-bg">
        <video loop muted autoplay class="fullscreen-bg__video">
          <source src="/contactVid.mp4" type="video/mp4" />
        </video>
      </div>

      <Heading
        slot="header"
        level={1}
        gradient
        class="inline-block mx-auto text-shadow-white-glow"
        text="Contact me"
      />

      <div class="contact-form-container">
        <ContactForm
          apiEndpoint="https://vn4eo2dz4loerb452wl4lwne7e0ppsev.lambda-url.ca-central-1.on.aws/"
          rateLimitMinutes={5}
          maxMessageLength={2000}
          successMessage="Thanks! Your message has been sent. I will get back to you shortly."
          errorMessage="Oops! Something went wrong. Please try again later."
        />
      </div>
    </Article>
  </Content>
</Layout>
