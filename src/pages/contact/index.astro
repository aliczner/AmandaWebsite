---
import Content from '../../layouts/Content.astro'
import Heading from '../../components/Heading.astro'
import Article from '../../components/Article.astro'
import Layout from '../../layouts/Layout.astro'
import Sidebar from '../../layouts/Sidebar.astro'
import Header from '../../components/Header.astro'
import ContactForm from '../../components/ContactForm.astro'
import { SEO } from 'astro-seo'
import '../../styles/main.scss'

const siteUrl = Astro.site?.toString() || 'https://amandaliczner.ca'
---

<SEO
  title="Hire Dr. Amanda Liczner - Freelance Ecological Consulting Inquiries"
  description="Contact Dr. Amanda Liczner for freelance ecological consulting projects, research collaboration, or speaking engagements. Available for bee conservation, statistical analysis, GIS mapping, and environmental research projects across Canada."
  canonical={`${siteUrl}/contact`}
  openGraph={{
    basic: {
      title: 'Hire Dr. Amanda Liczner - Freelance Ecological Consulting',
      type: 'website',
      image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      url: `${siteUrl}/contact`,
    },
    optional: {
      description: 'Contact Dr. Amanda Liczner for freelance ecological consulting projects, research collaboration, or speaking engagements across Canada.',
      siteName: 'Dr. Amanda Liczner - Freelance Ecological Consultant',
      locale: 'en_CA',
    },
    image: {
      url: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      secureUrl: `${siteUrl}/pictures/AmandaLiczner.jpg`,
      alt: 'Dr. Amanda Liczner, bumble bee ecologist and conservation biologist',
      type: 'image/jpeg',
      width: 600,
      height: 600,
    }
  }}
  twitter={{
    card: 'summary_large_image',
    site: '@amandaliczner',
    creator: '@amandaliczner',
    title: 'Hire Dr. Amanda Liczner - Freelance Ecological Consultant',
    description: 'Contact for freelance ecological consulting projects, research collaboration, or speaking engagements across Canada.',
    image: `${siteUrl}/pictures/AmandaLiczner.jpg`,
    imageAlt: 'Dr. Amanda Liczner, freelance ecological consultant',
  }}
  extend={{
    meta: [
      { name: 'keywords', content: 'hire ecologist Canada, freelance ecological consultant contact, ecological consulting inquiry, conservation biology consulting, bee conservation consultant, environmental research collaboration' },
      { name: 'author', content: 'Dr. Amanda Liczner' },
      { name: 'robots', content: 'index, follow' },
      { property: 'article:author', content: 'Dr. Amanda Liczner' },
      { name: 'geo.region', content: 'CA' },
      { name: 'geo.placename', content: 'Canada' },
    ],
    link: [
      { rel: 'alternate', hreflang: 'en-ca', href: `${siteUrl}/contact` },
      { rel: 'alternate', hreflang: 'en', href: `${siteUrl}/contact` },
    ]
  }}
/>

<!-- ContactPage Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  'name': 'Hire Dr. Amanda Liczner - Freelance Ecological Consulting',
  'description': 'Contact Dr. Amanda Liczner for freelance ecological consulting projects, research collaboration, or speaking engagements across Canada.',
  'url': `${siteUrl}/contact`,
  'mainEntity': {
    '@type': 'Person',
    'name': 'Dr. Amanda Liczner',
    'jobTitle': 'Freelance Ecological Consultant',
    'url': siteUrl,
    'image': `${siteUrl}/pictures/AmandaLiczner.jpg`,
    'sameAs': [
      siteUrl,
      `${siteUrl}/experience`,
      `${siteUrl}/books`,
      `${siteUrl}/services`
    ]
  }
})} />

<!-- Breadcrumb Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  'itemListElement': [
    {
      '@type': 'ListItem',
      'position': 1,
      'name': 'Home',
      'item': siteUrl
    },
    {
      '@type': 'ListItem',
      'position': 2,
      'name': 'Contact',
      'item': `${siteUrl}/contact`
    }
  ]
})} />

<style>
  .fullscreen-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
  }

  .fullscreen-bg__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(50%);
  }

  .text-shadow-white-glow {
    text-shadow: 0 0 0.5px rgba(255, 255, 255, 0.8);
  }

  .contact-form-container {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 32rem;
    margin: 0 auto;
  }
</style>

<Layout title="Contact - Amanda Liczner">
  <Sidebar class="lg:hidden" />
  <Header />
  <Content>
    <Article>
      <div class="fullscreen-bg">
        <video loop muted autoplay class="fullscreen-bg__video">
          <source src="/contactVid.mp4" type="video/mp4" />
        </video>
      </div>

      <Heading
        slot="header"
        level={1}
        gradient
        class="inline-block mx-auto text-shadow-white-glow"
        text="Get in Touch - Freelance Ecological Consulting"
      />

      <div class="contact-form-container">
        <ContactForm
          apiEndpoint="/api/contact"
          rateLimitMinutes={5}
          maxMessageLength={2000}
          successMessage="Thanks! Your message has been sent. I will get back to you shortly."
          errorMessage="Oops! Something went wrong. Please try again later."
        />
      </div>
    </Article>
  </Content>
</Layout>
