---
import Content from '../../layouts/Content.astro'
import Heading from '../../components/Heading.astro'
import Article from '../../components/Article.astro'
import Layout from '../../layouts/Layout.astro'
import Sidebar from '../../layouts/Sidebar.astro'
import Header from '../../components/Header.astro'
import Text from '../../components/Text.astro'
import { SEO } from 'astro-seo'
import '../../styles/main.scss'

const siteUrl = Astro.site?.toString() || 'https://amandaliczner.ca'
---

<SEO
  title="Skills & Education - Dr. Amanda Liczner | Ecologist & Conservation Biologist"
  description="Explore Dr. Amanda Liczner's expertise in data analysis, spatial analysis, machine learning, and conservation planning. PhD in Biology from York University with focus on bumble bee ecology and climate change research."
  canonical={`${siteUrl}/skills-education`}
  openGraph={{
    basic: {
      title: 'Skills & Education - Dr. Amanda Liczner',
      type: 'profile',
      image: `${siteUrl}/pictures/education.jpg`,
      url: `${siteUrl}/skills-education`,
    },
    optional: {
      description: 'Data analysis, spatial modeling, conservation planning, and research expertise. PhD in Biology specializing in pollinator ecology and climate change.',
      siteName: 'Dr. Amanda Liczner - Ecologist',
      locale: 'en_CA',
    },
    image: {
      url: `${siteUrl}/pictures/education.jpg`,
      secureUrl: `${siteUrl}/pictures/education.jpg`,
      alt: 'Dr. Amanda Liczner graduation photo',
      type: 'image/jpeg',
      width: 800,
      height: 800,
    }
  }}
  twitter={{
    card: 'summary_large_image',
    site: '@amandaliczner',
    creator: '@amandaliczner',
    title: 'Skills & Education - Dr. Amanda Liczner',
    description: 'PhD in Biology | Data analysis, conservation planning & pollinator ecology expertise',
    image: `${siteUrl}/pictures/education.jpg`,
    imageAlt: 'Dr. Amanda Liczner graduation photo',
  }}
  extend={{
    meta: [
      { name: 'keywords', content: 'ecology PhD, conservation biology education, data analysis skills, spatial analysis, machine learning ecology, R programming, QGIS, bumble bee research, climate change biology, York University, Amanda Liczner education' },
      { name: 'author', content: 'Dr. Amanda Liczner' },
      { name: 'robots', content: 'index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1' },
      { property: 'profile:first_name', content: 'Amanda' },
      { property: 'profile:last_name', content: 'Liczner' },
      { property: 'profile:username', content: 'amandaliczner' },
      { name: 'geo.region', content: 'CA' },
      { name: 'geo.placename', content: 'Canada' },
    ],
    link: [
      { rel: 'alternate', hreflang: 'en-ca', href: `${siteUrl}/skills-education` },
      { rel: 'alternate', hreflang: 'en', href: `${siteUrl}/skills-education` },
    ]
  }}
/>

<Layout title="Skills & Education - Dr. Amanda Liczner">
  <Sidebar class="lg:hidden" />
  <Header />

  <!-- Breadcrumb Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    'itemListElement': [
      {
        '@type': 'ListItem',
        'position': 1,
        'name': 'Home',
        'item': siteUrl
      },
      {
        '@type': 'ListItem',
        'position': 2,
        'name': 'Skills & Education',
        'item': `${siteUrl}/skills-education`
      }
    ]
  })} />

  <!-- Person Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Person',
    'name': 'Dr. Amanda Liczner',
    'jobTitle': 'Ecologist and Conservation Biologist',
    'url': siteUrl,
    'image': `${siteUrl}/pictures/education.jpg`,
    'alumniOf': [
      {
        '@type': 'EducationalOrganization',
        'name': 'York University',
        'location': 'Canada'
      }
    ],
    'hasCredential': [
      {
        '@type': 'EducationalOccupationalCredential',
        'credentialCategory': 'degree',
        'educationalLevel': 'Doctorate',
        'name': 'Ph.D. Biology',
        'about': 'The effects of climate change on bumble bee movement and habitat selection',
        'recognizedBy': {
          '@type': 'EducationalOrganization',
          'name': 'York University'
        }
      },
      {
        '@type': 'EducationalOccupationalCredential',
        'credentialCategory': 'degree',
        'educationalLevel': 'Master',
        'name': 'M.Sc. Biology',
        'recognizedBy': {
          '@type': 'EducationalOrganization',
          'name': 'York University'
        }
      },
      {
        '@type': 'EducationalOccupationalCredential',
        'credentialCategory': 'degree',
        'educationalLevel': 'Bachelor',
        'name': 'Spec. Hons. B.Sc. Biology',
        'recognizedBy': {
          '@type': 'EducationalOrganization',
          'name': 'York University'
        }
      }
    ],
    'knowsAbout': [
      'Ecology',
      'Conservation Biology',
      'Data Analysis',
      'Spatial Analysis',
      'Machine Learning',
      'Climate Modelling',
      'Conservation Planning',
      'Pollinator Biology',
      'Bumble Bee Ecology',
      'R Programming',
      'QGIS',
      'Experimental Design'
    ]
  })} />

  <main>
    <!-- Hero Section -->
    <section class="relative py-20 lg:py-32 overflow-hidden">
      <!-- Gradient Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-secondary/5 to-primary/10"></div>

      <div class="container relative px-4 sm:px-6">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Breadcrumb Navigation for SEO -->
          <nav aria-label="Breadcrumb" class="mb-6">
            <ol class="flex items-center justify-center gap-2 text-sm text-neutral-600">
              <li><a href="/" class="hover:text-primary transition-colors">Home</a></li>
              <li aria-hidden="true">/</li>
              <li aria-current="page" class="text-primary font-medium">Skills & Education</li>
            </ol>
          </nav>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-medium text-neutral-700 mb-6">
            <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
              Skills & Education
            </span>
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-neutral-600 max-w-3xl mx-auto leading-relaxed mb-4">
            Expertise in ecology, conservation biology, data analysis, and scientific research.
          </p>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-12 lg:py-20 relative">
      <div class="container px-4 sm:px-6">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-medium text-center mb-12 lg:mb-16">
            <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
              Skills
            </span>
          </h2>

          <div class="grid sm:grid-cols-2 gap-6 lg:gap-8">
            <!-- Data & Analysis Skills -->
            <div class="bg-white p-6 lg:p-8 rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-300 ease-out hover:scale-105 hover:-translate-y-2 border border-primary/10">
              <h3 class="text-xl lg:text-2xl font-semibold mb-4 text-neutral-700">
                Data & Analysis Skills
              </h3>
              <ul class="space-y-2 text-neutral-600">
                <li class="font-semibold text-neutral-700">
                  Data analysis, management, and manipulation
                </li>
                <ul class="ml-4 space-y-1">
                  <li>Spatial analysis</li>
                  <li>Machine learning</li>
                  <li>Climate modelling</li>
                  <li>Conservation planning</li>
                  <li>Movement analysis</li>
                  <li>Big data analysis</li>
                </ul>
                <li>Telemetry</li>
                <li>Habitat analysis</li>
                <li>Experimental design</li>
              </ul>
            </div>

            <!-- Software & Tools -->
            <div class="bg-white p-6 lg:p-8 rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-300 ease-out hover:scale-105 hover:-translate-y-2 border border-primary/10">
              <h3 class="text-xl lg:text-2xl font-semibold mb-4 text-neutral-700">
                Software & Tools
              </h3>
              <ul class="space-y-2 text-neutral-600">
                <li>R programming</li>
                <li>QGIS</li>
                <li>GitHub</li>
                <li>Open Science Framework</li>
                <li>Web Development (HTML, CSS, Astro)</li>
                <li>Version control</li>
              </ul>
            </div>

            <!-- Research & Project Management -->
            <div class="bg-white p-6 lg:p-8 rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-300 ease-out hover:scale-105 hover:-translate-y-2 border border-primary/10">
              <h3 class="text-xl lg:text-2xl font-semibold mb-4 text-neutral-700">
                Research & Project Management
              </h3>
              <ul class="space-y-2 text-neutral-600">
                <li>Project management</li>
                <li>Literature search</li>
                <li>Experimental design</li>
                <li>Conservation planning</li>
                <li>Data organization & curation</li>
              </ul>
            </div>

            <!-- Communication & Outreach -->
            <div class="bg-white p-6 lg:p-8 rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-300 ease-out hover:scale-105 hover:-translate-y-2 border border-primary/10">
              <h3 class="text-xl lg:text-2xl font-semibold mb-4 text-neutral-700">
                Communication & Outreach
              </h3>
              <ul class="space-y-2 text-neutral-600">
                <li>Technical & report writing</li>
                <li>Scientific publications</li>
                <li>Distilling complex information</li>
                <li>Blogging & Social Media</li>
                <li>Teaching</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Education Section -->
    <section class="py-12 lg:py-20 bg-gradient-to-br from-neutral-50 via-white to-primary/5">
      <div class="container px-4 sm:px-6">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-medium text-center mb-12 lg:mb-16">
            <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
              Education
            </span>
          </h2>

          <div class="grid md:grid-cols-3 gap-8 lg:gap-12 items-start">
            <!-- Education Details -->
            <div class="md:col-span-2 space-y-8">
              <!-- PhD -->
              <div class="bg-white p-6 lg:p-8 rounded-3xl shadow-lg border border-primary/10">
                <h3 class="text-2xl lg:text-3xl font-medium mb-4">
                  <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                    Ph.D. Biology
                  </span>
                </h3>
                <p class="text-lg font-semibold text-neutral-700 mb-3">York University, Canada</p>
                <ul class="space-y-2 text-neutral-600">
                  <li class="font-semibold text-neutral-700">2016-2020</li>
                  <li>
                    <strong>Dissertation:</strong> "The effects of climate change on bumble bee movement and habitat selection"
                  </li>
                  <li><strong>Supervisor:</strong> Dr. Sheila Colla, York University, Canada</li>
                </ul>
              </div>

              <!-- MSc -->
              <div class="bg-white p-6 lg:p-8 rounded-3xl shadow-lg border border-primary/10">
                <h3 class="text-2xl lg:text-3xl font-medium mb-4">
                  <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                    M.Sc. Biology
                  </span>
                </h3>
                <p class="text-lg font-semibold text-neutral-700 mb-3">York University, Canada</p>
                <ul class="space-y-2 text-neutral-600">
                  <li class="font-semibold text-neutral-700">2014-2016</li>
                  <li>
                    <strong>Dissertation:</strong> "Nursing back to health: Shrubs facilitate the restoration of native forbs with reductions in non-native competition in an invaded arid shrubland."
                  </li>
                  <li><strong>Supervisor:</strong> Dr. Christopher Lortie, York University, Canada</li>
                </ul>
              </div>

              <!-- BSc -->
              <div class="bg-white p-6 lg:p-8 rounded-3xl shadow-lg border border-primary/10">
                <h3 class="text-2xl lg:text-3xl font-medium mb-4">
                  <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                    Spec. Hons. B.Sc. Biology
                  </span>
                </h3>
                <p class="text-lg font-semibold text-neutral-700 mb-3">York University, Canada</p>
                <ul class="space-y-2 text-neutral-600">
                  <li class="font-semibold text-neutral-700">2009 - 2013</li>
                  <li>
                    <strong>Honours thesis:</strong> "A desert nurse plant (Larrea tridentata) facilitates the germination and seed characteristics of winter annuals in California."
                  </li>
                  <li><strong>Supervisor:</strong> Dr. Christopher Lortie, York University, Canada</li>
                </ul>
              </div>
            </div>

            <!-- Education Image -->
            <div class="md:col-span-1 flex items-center justify-center md:sticky md:top-24">
              <div class="image-wrapper max-w-sm w-full">
                <img
                  src="/pictures/education.jpg"
                  alt="Dr. Amanda Liczner graduation headshot showing her academic achievement"
                  loading="eager"
                  width="800"
                  height="800"
                  class="w-full h-auto rounded-2xl"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .image-wrapper {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(240, 253, 250, 0.95) 100%);
    padding: 0.75rem;
    border-radius: 1rem;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06),
      0 20px 25px -5px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(var(--ac-primary), 0.1);
    transition: all 0.3s ease;
  }

  .image-wrapper:hover {
    transform: translateY(-4px);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05),
      0 25px 50px -12px rgba(0, 0, 0, 0.15);
  }
</style>
