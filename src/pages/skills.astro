---
import Footer from '../components/Footer.astro';
import HeaderFull from '../components/HamburgerHeader.astro';
import "../styles/global.css"
---

<!DOCTYPE html>
<html lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<head>
		<style> 
            body {
            background-image:linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url("/pictures/skillsbg.png");
            background-size: cover;
            color: #f7f3ed; 
        }
        .page-title {
            font-size: 4em;
            font-family: Century Gothic;
            color: #f7f3ed;
        }

        .hyperlinks {
            color: #ECD498;
        }
        li {
    margin-left: 5%;
    list-style-type: circle;
 }


            </style>
            </head>
        
        <main>

            <div> <HeaderFull / > </div> 
               
                    <h1 class="page-title  py-12 md:px-12 mx-auto px-2 text-3xl md:text-6xl">Skills</h1>
                    <div class="mx-auto overflow-hidden md:max-w-5xl my-4 md:text-xl small-screen-padding all-content">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <div>
                            <h2 class="text-xl md:text-2xl font-semibold mb-4">Technical Skills</h2>
                            <ul class="list-disc pl-6">
                                <li>Data analysis, management and manipulation
                                    <ul class="list-disc pl-6">
                                        <li>spatial analysis</li>
                                        <li>machine learning</li>
                                        <li>climate modelling</li>
                                        <li>conservation planning</li>
                                        <li>movement analysis</li>
                                        <li>version control</li>
                                        <li>big data anlysis</li>
                                        </ul>
                                    </li>
                                    <li>Telemetry</li> 
                                    <li>Pollinator and plant surveys</li>
                                    <li>Habitat analysis</li>
                                    <li>Experimental Design</li>
                                    <li>Project Management</li>
                                    <li>Literature search</li>
                                </ul>
                            </ul>
                        </div>
                        <div>
                            <h2 class="text-xl md:text-2xl font-semibold mb-4">Tools and Software</h2>
                            <ul class="list-disc pl-6">
                                <li>R programming language</li>
                                <li>QGIS</li>
                                <li>Github</li>
                                <li>Open Science Framework</li>
                                <li>Web Dev (HTML, CSS, Astro)</li>
                            </ul>
                        </div>
                        <div>
                            <h2 class="text-xl md:text-2xl font-semibold mb-4">Communication Skills</h2>
                            <ul class="list-disc pl-6">
                                <li>Technical Writing and report writing</li>
                                <li>Scientific publications</li>
                                <li>Ability to distill complex information for wide audiences</li>
                                <li>Social media management</li>
                                <li>Blogging</li>
                                <li>Teaching</li>
                            </ul>
                        </div>
                    </div>
                </div>
             </main>
		<Footer />

</html>

