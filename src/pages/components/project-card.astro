---
export interface Props {
  image: string
  title: string
  description: string
  buttonText: string
  buttonLink: string
}
import Button from '../../components/Button.astro'
const { image, title, description, buttonText, buttonLink } = Astro.props
---

<div
  class="flex flex-col md:flex-row items-center md:items-start bg-white shadow-md rounded-lg p-4 max-w-3xl mx-auto"
>
  <!-- Left: Image -->
  <img src={image} alt={title} class="w-1/4 h-32 object-cover rounded-lg" />

  <!-- Middle: Title & Description -->
  <div class="w-1/2 text-center md:text-left px-4">
    <h3 class="text-xl font-semibold">{title}</h3>
    <p class="text-gray-600 text-sm mt-2">{description}</p>
  </div>

  <!-- Right: Button -->
  <div class="w-1/4 text-center md:text-right">
    <Button
      href="/#about-me"
      text={buttonText}
      variant="primary"
      className="lg:text-2xl text-lg  tracking-wide"
    />
  </div>
</div>
