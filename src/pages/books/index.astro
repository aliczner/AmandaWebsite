---
import Header from '../../components/Header.astro'
import Layout from '../../layouts/Layout.astro'
import Sidebar from '../../layouts/Sidebar.astro'
import { SEO } from 'astro-seo'
import '../../styles/main.scss'

const siteUrl = Astro.site?.toString() || 'https://amandaliczner.ca'

const books = [
  {
    title: 'Pollinator ABC Colouring Book',
    subtitle: 'Learn the Alphabet with Bees, Butterflies & Pollinators',
    type: 'Children\'s Colouring Book',
    description: 'An educational ABC journey through the fascinating world of pollinators! Perfect for young learners aged 3-8 to explore the alphabet while discovering amazing pollinating creatures including bees, butterflies, hummingbirds, and more. Each page features beautiful illustrations and fun facts about nature\'s most important helpers.',
    amazonUrl: 'https://www.amazon.ca/dp/B0G45D33KZ',
    coverImage: '/pictures/pollinator-abc-kids.jpg',
    targetAudience: 'Children',
    isbn: 'B0G45D33KZ', // Amazon ASIN
    keywords: 'pollinator coloring book, ABC coloring book, bee coloring book for kids, butterfly coloring book, educational coloring book',
  },
  {
    title: 'A Visit From Santa Bee',
    subtitle: 'A Festive Holiday Pollinator Adventure',
    type: 'Children\'s Colouring Book',
    description: 'A delightful holiday tale featuring Santa Bee and his pollinator friends! This festive colouring book combines the magic of Christmas with the wonderful world of bees. Perfect for children aged 3-8 who love nature and holiday stories. Features charming illustrations of Santa Bee delivering presents, decorating hives, and celebrating with his bee family.',
    amazonUrl: 'https://www.amazon.ca/dp/B0G4GN1V7Q',
    coverImage: '/pictures/santa-bee.jpg',
    targetAudience: 'Children',
    isbn: 'B0G4GN1V7Q', // Amazon ASIN
    keywords: 'Christmas coloring book, bee coloring book, holiday coloring book for kids, Santa coloring book, nature coloring book',
  },
  {
    title: 'My Cute Garden',
    subtitle: 'Gardening for Pollinators Story Colouring Book',
    type: 'Children\'s Colouring Book',
    description: 'An engaging story-based colouring book that teaches children about pollinator-friendly gardening! Perfect for young gardeners aged 3-8 to learn how to create beautiful gardens that welcome bees, butterflies, and other helpful pollinators. Combines storytelling with educational content about growing flowers and plants that support nature\'s most important helpers.',
    amazonUrl: 'https://www.amazon.ca/dp/B0G81BGVLL',
    coverImage: '/pictures/cute-garden.jpg',
    targetAudience: 'Children',
    isbn: 'B0G81BGVLL', // Amazon ASIN
    keywords: 'gardening coloring book for kids, pollinator garden, bee garden book, butterfly garden, nature education for children',
  },
  {
    title: 'Frosty the Snowbee\'s Christmas Adventure',
    subtitle: 'A Holiday Colouring Book',
    type: 'Children\'s Colouring Book',
    description: 'Join Frosty the Snowbee on a magical Christmas adventure! This delightful holiday colouring book features a charming bee character exploring winter wonderlands and Christmas magic. Perfect for children aged 3-8 who love festive stories and nature. Features fun illustrations combining the joy of the holiday season with the fascinating world of bees.',
    amazonUrl: 'https://www.amazon.ca/dp/B0G6SKGVDY',
    coverImage: '/pictures/frosty-snowbee.jpg',
    targetAudience: 'Children',
    isbn: 'B0G6SKGVDY', // Amazon ASIN
    keywords: 'Christmas coloring book, winter coloring book for kids, holiday bee book, snowman coloring book, festive nature book',
  },
  {
    title: 'Pollinator Colouring Book For Adults',
    subtitle: 'Intricate Designs for Relaxation & Mindfulness',
    type: 'Adult Colouring Book',
    description: 'Immerse yourself in the beautiful world of pollinators with detailed and intricate illustrations perfect for relaxation and stress relief. Features complex patterns of bees, butterflies, moths, hummingbirds, and native wildflowers in their natural habitats. Each page offers a mindful colouring experience while celebrating these essential creatures.',
    amazonUrl: 'https://www.amazon.ca/dp/B0G51DQGRV',
    coverImage: '/pictures/pollinator-adult.jpg',
    targetAudience: 'Adults',
    isbn: 'B0G51DQGRV', // Amazon ASIN
    keywords: 'adult coloring book, pollinator coloring book, bee coloring book adults, butterfly coloring book, mindfulness coloring',
  },
  {
    title: 'Whimsical Pollinators',
    subtitle: 'A Colouring Book for Adults',
    type: 'Adult Colouring Book',
    description: 'Discover the enchanting world of pollinators through whimsical and artistic illustrations designed for adult colouring enthusiasts. This collection features creative and imaginative interpretations of bees, butterflies, and other pollinators. Perfect for those seeking a delightful and relaxing creative outlet while appreciating nature\'s fascinating creatures.',
    amazonUrl: 'https://www.amazon.ca/dp/B0G4ZWB17V',
    coverImage: '/pictures/whimsical-pollinator-adult.jpg',
    targetAudience: 'Adults',
    isbn: 'B0G4ZWB17V', // Amazon ASIN
    keywords: 'adult coloring book, whimsical coloring book, pollinator art, bee coloring book adults, creative coloring',
  },
]

// Generate JSON-LD structured data for SEO
const structuredData = books
  .filter(book => book.amazonUrl !== '#')
  .map(book => ({
    '@context': 'https://schema.org',
    '@type': 'Book',
    'name': book.title,
    'author': {
      '@type': 'Person',
      'name': 'Dr. Amanda Liczner',
      'jobTitle': 'Ecologist and Conservation Biologist',
      'url': siteUrl,
      'sameAs': [
        siteUrl,
        `${siteUrl}/experience`
      ]
    },
    'bookFormat': 'https://schema.org/Paperback',
    'genre': book.targetAudience === 'Children' ? 'Children\'s Educational' : 'Adult Coloring Book',
    'audience': {
      '@type': 'Audience',
      'audienceType': book.targetAudience
    },
    'about': 'Pollinators, Bees, Butterflies, Conservation, Nature Education',
    'description': book.description,
    'image': `${siteUrl}${book.coverImage}`,
    'isbn': book.isbn,
    'offers': {
      '@type': 'Offer',
      'availability': 'https://schema.org/InStock',
      'price': 'Available on Amazon',
      'priceCurrency': 'CAD',
      'url': book.amazonUrl,
      'seller': {
        '@type': 'Organization',
        'name': 'Amazon.ca'
      }
    },
    'publisher': {
      '@type': 'Person',
      'name': 'Dr. Amanda Liczner'
    }
  }))
---

<SEO
  title="Pollinator Colouring Books by Dr. Amanda Liczner | Educational Books for Kids & Adults"
  description="Discover beautiful pollinator-themed colouring books by Dr. Amanda Liczner, an expert ecologist. Featuring ABC learning books for children and intricate designs for adults. Learn about bees, butterflies, and nature's essential pollinators. Available on Amazon."
  canonical={`${siteUrl}/books`}
  openGraph={{
    basic: {
      title: 'Pollinator Colouring Books by Dr. Amanda Liczner - Educational & Beautiful',
      type: 'website',
      image: `${siteUrl}/pictures/pollinator-abc-kids.jpg`,
      url: `${siteUrl}/books`,
    },
    optional: {
      description: 'Educational pollinator-themed colouring books for children and adults. Learn about bees, butterflies, and conservation through art. By Dr. Amanda Liczner, ecologist.',
      siteName: 'Dr. Amanda Liczner - Ecologist',
      locale: 'en_CA',
    },
    image: {
      url: `${siteUrl}/pictures/pollinator-abc-kids.jpg`,
      secureUrl: `${siteUrl}/pictures/pollinator-abc-kids.jpg`,
      alt: 'Pollinator ABC Colouring Book cover featuring educational bee and butterfly illustrations',
      type: 'image/jpeg',
      width: 600,
      height: 800,
    }
  }}
  twitter={{
    card: 'summary_large_image',
    site: '@amandaliczner',
    creator: '@amandaliczner',
    title: 'Pollinator Colouring Books by Dr. Amanda Liczner',
    description: 'Educational pollinator books for kids & adults. Learn about bees, butterflies & conservation.',
    image: `${siteUrl}/pictures/pollinator-abc-kids.jpg`,
    imageAlt: 'Pollinator ABC Colouring Book cover',
  }}
  extend={{
    meta: [
      { name: 'keywords', content: 'pollinator coloring books, bee coloring book, butterfly coloring book, educational coloring books, children\'s nature books, adult coloring books, Amanda Liczner books, pollinator conservation, ecology books, nature education' },
      { name: 'author', content: 'Dr. Amanda Liczner' },
      { name: 'robots', content: 'index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1' },
      { property: 'article:author', content: 'Dr. Amanda Liczner' },
      { property: 'article:publisher', content: siteUrl },
      { name: 'geo.region', content: 'CA' },
      { name: 'geo.placename', content: 'Canada' },
    ],
    link: [
      { rel: 'alternate', hreflang: 'en-ca', href: `${siteUrl}/books` },
      { rel: 'alternate', hreflang: 'en', href: `${siteUrl}/books` },
    ]
  }}
/>

<Layout title="Pollinator Colouring Books - Dr. Amanda Liczner">
  <Sidebar class="lg:hidden" />
  <Header />

  <!-- JSON-LD Structured Data -->
  {structuredData.map(data => (
    <script type="application/ld+json" set:html={JSON.stringify(data)} />
  ))}

  <!-- Breadcrumb Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    'itemListElement': [
      {
        '@type': 'ListItem',
        'position': 1,
        'name': 'Home',
        'item': siteUrl
      },
      {
        '@type': 'ListItem',
        'position': 2,
        'name': 'Books',
        'item': `${siteUrl}/books`
      }
    ]
  })} />

  <main>
    <!-- Hero Section -->
    <section class="relative py-20 lg:py-32 overflow-hidden">
      <!-- Gradient Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-secondary/5 to-primary/10"></div>

      <div class="container relative px-4 sm:px-6">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Breadcrumb Navigation for SEO -->
          <nav aria-label="Breadcrumb" class="mb-6">
            <ol class="flex items-center justify-center gap-2 text-sm text-neutral-600">
              <li><a href="/" class="hover:text-primary transition-colors">Home</a></li>
              <li aria-hidden="true">/</li>
              <li aria-current="page" class="text-primary font-medium">Books</li>
            </ol>
          </nav>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-medium text-neutral-700 mb-6">
            <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
              Pollinator Colouring Books
            </span>
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-neutral-600 max-w-3xl mx-auto leading-relaxed mb-4">
            Discover the wonderful world of pollinators through beautiful colouring books.
            Perfect for all ages, from young learners to adults seeking creative relaxation.
          </p>
        </div>
      </div>
    </section>

    <!-- Books Grid -->
    <section class="py-12 lg:py-20 relative" aria-label="Colouring books collection">
      <div class="container px-4 sm:px-6">
        <!-- Children's Books -->
        <div class="max-w-6xl mx-auto mb-12">
          <h2 class="text-3xl lg:text-4xl font-medium text-neutral-700 mb-8 text-center">
            <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
              Children's Books
            </span>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
            {books.filter(book => book.targetAudience === 'Children').map((book, index) => (
              <article class="book-card group" itemscope itemtype="https://schema.org/Book">
                <!-- Card Container -->
                <div class="relative h-full">
                  <!-- Gradient Glow Effect -->
                  <div class="absolute inset-0 bg-gradient-to-br from-primary/20 via-secondary/15 to-primary/10 rounded-3xl blur-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></div>

                  <!-- Main Card -->
                  <div class="relative h-full bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border border-primary/10 flex flex-col">

                    <!-- Book Cover Image -->
                    <div class="book-cover-container relative overflow-hidden bg-gradient-to-br from-neutral-50 to-primary/5">
                      <div class="aspect-[3/4] relative max-h-[380px]">
                        <img
                          src={book.coverImage}
                          alt={`${book.title} - ${book.subtitle}. ${book.type} featuring educational illustrations of bees, butterflies, and pollinators. By Dr. Amanda Liczner, ecologist.`}
                          itemprop="image"
                          class="absolute inset-0 w-full h-full object-cover transition-opacity duration-300"
                          loading={index === 0 ? 'eager' : 'lazy'}
                          width="600"
                          height="800"
                        />
                      </div>

                      <!-- Audience Badge -->
                      <div class="absolute top-4 right-4">
                        <span class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-white/90 backdrop-blur-sm text-primary border border-primary/20 shadow-md">
                          {book.targetAudience}
                        </span>
                      </div>
                    </div>

                    <!-- Book Details -->
                    <div class="p-6 lg:p-8 flex flex-col flex-grow">
                      <div class="flex-grow">
                        <p class="text-sm font-medium text-secondary mb-2" itemprop="genre">{book.type}</p>
                        <h3 class="text-2xl lg:text-3xl font-medium text-neutral-700 mb-2 leading-tight max-w-full" itemprop="name">
                          {book.title}
                        </h3>
                        <p class="text-base text-neutral-500 mb-3 italic" itemprop="alternativeHeadline">
                          {book.subtitle}
                        </p>
                        <p class="text-neutral-600 leading-relaxed mb-6 max-w-full" itemprop="description">
                          {book.description}
                        </p>

                        <!-- Hidden metadata for SEO -->
                        <meta itemprop="author" content="Dr. Amanda Liczner" />
                        <meta itemprop="bookFormat" content="Paperback" />
                        {book.isbn && <meta itemprop="isbn" content={book.isbn} />}
                      </div>

                      <!-- Amazon Button -->
                      <a
                        href={book.amazonUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="amazon-button inline-flex items-center justify-center gap-2 w-full px-6 py-4 bg-gradient-to-r from-[#FF9900] to-[#FFB84D] text-white rounded-xl font-medium shadow-lg hover:shadow-2xl hover:scale-105 hover:-translate-y-1 transition-all duration-300 ease-out"
                        aria-label={`Buy ${book.title} on Amazon Canada`}
                        itemprop="offers"
                        itemscope
                        itemtype="https://schema.org/Offer"
                      >
                        <meta itemprop="price" content="Available" />
                        <meta itemprop="priceCurrency" content="CAD" />
                        <meta itemprop="availability" content="https://schema.org/InStock" />
                        <link itemprop="url" href={book.amazonUrl} />
